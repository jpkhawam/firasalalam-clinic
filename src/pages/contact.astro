---
import { t } from "i18next";
import { changeLanguage } from "i18next";
import ContactForm from "../components/contact/ContactForm";
import Layout from "../layouts/Layout.astro";

changeLanguage("en");
---

<Layout title="Contact" description={t("seo.descriptions.contact")}>
  <section class="bg-gradient-to-b from-base-200 to-base-300">
    <div class="mx-auto max-w-screen-xl py-10 sm:px-6 lg:px-8 lg:py-16">
      <div class="grid grid-cols-1 gap-y-8 xl:grid-cols-5 xl:gap-x-16">
        <div
          class="mx-auto w-full text-justify sm:w-3/5 xl:col-span-2 xl:mx-0 xl:w-full xl:py-12"
        >
          <p class="px-6 text-lg sm:px-0">
            <span class="pb-2">
              {t("contact.paragraph-1")}
              <br /><br />
            </span>
            <span class="pb-2">
              {t("contact.paragraph-2")}
              <br /><br />
            </span>
            <span class="pb-2">
              {t("contact.paragraph-3")}
            </span>
          </p>

          <!-- TODO: add whatsapp / telegram / links here -->
        </div>

        <div
          class="bg-white p-8 text-black shadow-lg dark:bg-[#262830] sm:rounded-lg lg:col-span-3 lg:p-12"
        >
          <ContactForm client:load />
        </div>
      </div>
    </div>
  </section>
</Layout>
