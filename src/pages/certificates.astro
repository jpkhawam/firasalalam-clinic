---
import { t } from "i18next";
import { changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";

changeLanguage("en");

class Certificate {
  // TODO: add issued by
  constructor(
    public title: string,
    public month: string,
    public year: number,
    public description: string,
    public fileURL?: string
  ) {}
}

