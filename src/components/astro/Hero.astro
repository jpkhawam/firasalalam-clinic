---
import { Picture } from "@astrojs/image/components";
import NeoBrutalistButton from "./NeoBrutalistButton.astro";
---

<div class="hero min-h-screen bg-cream dark:bg-base-200">
  <div class="hero-content flex-col lg:flex-row-reverse">
    <Picture
      src="https://i.guim.co.uk/img/media/566c303b45612e76d0422d6b905ce685c9016a8f/0_0_1875_2500/master/1875.jpg?w=1200&q=55&auto=format&usm=12&fit=max&s=f59321a066fea0b5b463f25ccf78144b"
      class="max-w-sm rounded-lg shadow-2xl"
      widths={[400, 800, 1200]}
      aspectRatio="2:3"
      alt="TODO: alt text needs to go here"
    />
    <div>
      <h1 class="mb-2 text-2xl font-semibold">Looking for a psychologist?</h1>
      <h1 class="text-5xl font-bold">
        You're in the right place- Let's talk today.
      </h1>
      <p class="py-6 text-lg">
        Get in contact with Dr. Firas Al Alam today
      </p>
        <NeoBrutalistButton link="/contact/" title="Get Started" />
    </div>
  </div>
</div>
