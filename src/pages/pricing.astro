---
import { t } from "i18next";
import { Trans } from "astro-i18next/components";
import Layout from "../layouts/Layout.astro";
import PricingCard from "../components/pricing/PricingCard.astro";
---

<Layout title="Pricing" description={t("seo.descriptions.pricing")}>
  <section
    class="bg-gradient-to-b from-cream to-white px-5 dark:bg-gradient-to-b dark:from-base-200 dark:to-base-200"
  >
    <div class="flex flex-col items-center text-center">
      <div class="mt-3 text-lg font-semibold text-gray-800 dark:text-brand">
        {t("pricing.short-title")}
      </div>
      <div>
        <h1 class="mb-5 mt-3 font-sans text-3xl font-black md:text-5xl">
          {t("pricing.header-title")}
        </h1>
      </div>
    </div>
    <main>
      <div
        class="mt-10 max-w-prose text-center text-xl font-black sm:max-w-none"
      >
        <Trans i18nKey="pricing.in-lebanon">
          For individuals currently residing
          <span
            class="underline decoration-gray-500 decoration-wavy dark:decoration-brand"
            >in Lebanon</span
          >
        </Trans>
      </div>
      <PricingCard individualPrice={50} studentPrice={40} />
      <div
        class="mt-8 max-w-prose text-center text-xl font-black sm:max-w-none"
      >
        <Trans i18nKey="pricing.out-lebanon">
          For individuals currently residing
          <span
            class="underline decoration-gray-500 decoration-wavy dark:decoration-brand"
            >outside Lebanon</span
          >
        </Trans>
      </div>
      <PricingCard individualPrice={65} studentPrice={50} />
    </main>
    <div class="divider divider-vertical mx-auto my-7 mt-10 w-2/3"></div>
    <div class="flex flex-col items-center pb-10 text-center">
      <div>
        <h1 class="mb-5 mt-3 font-sans text-3xl font-black md:text-5xl">
          {t("pricing.pricing-faq")}
        </h1>
      </div>
      <div class="mx-auto w-full text-start md:w-4/5 lg:w-3/5">
        {
          [1, 2, 3, 4].map((index) => (
            <div class="collapse-arrow rounded-box collapse my-2 bg-transparent">
              <input type="checkbox" class="peer h-full w-full" />
              <div class="collapse-title text-lg font-medium md:text-2xl">
                {t(`pricing.question-${index}`)}{" "}
              </div>
              <div class="collapse-content text-sm md:text-base">
                <p>{t(`pricing.answer-${index}`)}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
