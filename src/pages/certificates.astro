---
import { t } from "i18next";
import { changeLanguage } from "i18next";
import Layout from "../layouts/Layout.astro";

changeLanguage("en");

class Certificate {
    constructor(
        public title: string,
        public month: string,
        public year: number,
        public description: string,
        public fileURL?: string
    ) {}
}

const certificates: Array<Certificate> = [];
certificates.push(
    new Certificate(
        "Donec porta enim vel",
        "Dec",
        2021,
        "Pellentesque feugiat ante at nisl efficitur, in mollis orci scelerisque. Interdum et malesuada fames ac ante ipsum primis in faucibus."
    ),
    new Certificate(
        "Aliquam sit amet nunc ut",
        "May",
        2021,
        "Morbi vulputate aliquam libero non dictum. Aliquam sit amet nunc ut diam aliquet tincidunt nec nec dui. Donec mollis turpis eget egestas sodales."
    ),
    new Certificate(
        "Donec porta enim vel",
        "Dec",
        2020,
        "Pellentesque feugiat ante at nisl efficitur, in mollis orci scelerisque. Interdum et malesuada fames ac ante ipsum primis in faucibus."
    ),
    new Certificate(
        "Aliquam sit amet nunc ut",
        "Jul",
        2019,
        "Morbi vulputate aliquam libero non dictum. Aliquam sit amet nunc ut diam aliquet tincidunt nec nec dui. Donec mollis turpis eget egestas sodales."
    ),
    new Certificate(
        "Pellentesque habitant morbi ",
        "Jan",
        2016,
        "Suspendisse tincidunt, arcu nec faucibus efficitur, justo velit consectetur nisl, sit amet condimentum lacus orci nec purus. Mauris quis quam suscipit, vehicula felis id, vehicula enim."
    )
);
---

<Layout title="Certificates" description="">
    <main>
        <section class="dark:bg-base-200 dark:text-gray-100">
            <div class="container max-w-5xl px-4 py-12 mx-auto">
                <div class="grid gap-4 mx-4 sm:grid-cols-12">
                    <div class="col-span-12 sm:col-span-3">
                        <div
                            class="text-center sm:text-left mb-14 before:block before:w-24 before:h-3 before:mb-5 before:rounded-md before:mx-auto sm:before:mx-0 before:bg-gray-300 before:dark:bg-brand"
                        >
                            <h3 class="text-3xl font-semibold">Morbi tempor</h3>
                            <span
                                class="text-sm font-bold tracki uppercase dark:text-gray-400"
                                >Vestibulum diam nunc</span
                            >
                        </div>
                    </div>
                    <div
                        class="relative col-span-12 px-4 space-y-6 sm:col-span-9"
                    >
                        <div
                            class="col-span-12 space-y-12 relative px-4 scol-span-8 sm:space-y-8 before:absolute before:top-2 before:bottom-0 before:w-0.5 before:-left-3 before:bg-gray-300 before:dark:bg-gray-700"
                        >
                            {
                                certificates.map((certificate) => (
                                    <div class="relative flex flex-col before:absolute before:left-[-35px] before:top-2 before:h-4 before:w-4 before:rounded-full before:bg-yellow-600 before:dark:bg-brand">
                                        <h3 class="tracki text-xl font-semibold">
                                            {certificate.title}
                                        </h3>
                                        <time class="tracki text-xs uppercase dark:text-gray-400">
                                            {certificate.month}{" "}
                                            {certificate.year}
                                        </time>
                                        <p class="mt-3">
                                            {certificate.description}
                                        </p>
                                        <button class="inset-0 mt-2 w-fit border-2 border-black bg-black px-2.5 py-2.5 font-sans text-sm font-semibold normal-case tracking-wide text-white transition-colors duration-300 hover:bg-white hover:text-black dark:rounded-md dark:border-brand dark:bg-base-200 dark:text-brand hover:dark:bg-brand hover:dark:text-black sm:w-1/2 md:w-1/3">
                                            <span class="">
                                                View certificate
                                            </span>
                                        </button>
                                    </div>
                                ))
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</Layout>
