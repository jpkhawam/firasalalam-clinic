---

<Layout title="Certificates" description="">
  <main>
    <section class="dark:bg-base-200 dark:text-gray-100">
      <div class="container mx-auto max-w-5xl px-4 py-12">
        <div class="mx-4 grid gap-4 sm:grid-cols-12">
          <div class="col-span-12 sm:col-span-3">
            <div
              class="mb-14 text-center before:mx-auto before:mb-5 before:block before:h-3 before:w-24 before:rounded-md before:bg-gray-300 before:dark:bg-brand sm:text-left sm:before:mx-0"
            >
              <h3 class="text-3xl font-semibold">Morbi tempor</h3>
              <span
                class="tracki text-sm font-bold uppercase dark:text-gray-400"
                >Vestibulum diam nunc</span
              >
            </div>
          </div>
          <div class="relative col-span-12 space-y-6 px-4 sm:col-span-9">
            <div
              class="scol-span-8 relative col-span-12 space-y-12 px-4 before:absolute before:-left-3 before:bottom-0 before:top-2 before:w-0.5 before:bg-gray-300 before:dark:bg-gray-700 sm:space-y-8"
            >
              {
                certificates.map((certificate) => (
                  <div class="relative flex flex-col before:absolute before:left-[-35px] before:top-2 before:h-4 before:w-4 before:rounded-full before:bg-yellow-600 before:dark:bg-brand">
                    <h3 class="text-xl font-semibold">{certificate.title}</h3>
                    <time class="text-xs uppercase dark:text-gray-400">
                      {certificate.month} {certificate.year}
                    </time>
                    <p class="mt-3 text-justify">{certificate.description}</p>
                    <button class="inset-0 mt-2 w-fit border-2 border-black bg-white px-2.5 py-2.5 font-sans text-sm font-semibold normal-case tracking-wide text-black transition-colors duration-300 hover:bg-black hover:text-white dark:rounded-md dark:border-brand dark:bg-base-200 dark:text-brand hover:dark:bg-brand hover:dark:text-black sm:w-1/2 md:w-1/3">
                      <span class="">View certificate</span>
                    </button>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
